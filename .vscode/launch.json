    "version": "0.2.0",
    "configurations": [        
        {
            "name": "Expo Android",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/mobile",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "expo",
                "start",
                "--android"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
         {
            "name": "Expo Start",
            "type": "pwa-node",
            "request": "launch",
            "cwd": "${workspaceFolder}/apps/mobile",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "expo",
                "start",
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
}